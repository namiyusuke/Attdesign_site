---
import Layout from '../../layouts/Layout.astro';
import { client } from '../../lib/microcms';
import framePc from "@assets/img/frame-pc.png";
import frameSp from "@assets/img/frame-sp.png";
import camera from "@assets/img/camera.svg";
import cameraGiza from "@assets/img/camera-giza.svg";
import Menu from "../../components/global/Menu.astro";
// microCMSからphotoデータを取得
const response = await client.getList({
  endpoint: 'photo',
  queries: { limit: 100, orders: '-date' },
});

const photos = response.contents;

---

<Layout title="Photo Gallery" description="写真ギャラリー">
  <Menu />
  <main class="photo-gallery">
    <div class="gallery">
      <div class="main-image-container">
        <p class="category">
          daily
        </p>
        <img class="main-image" src={photos[0]?.image.url} alt="Gallery Image" />
      </div>
      <div class="thumbnail-container">
        <div class="thumbnail-track">
          {photos.map((photo, index) => (
            <div
              id={`photo-${photo.id}`}
              class={`thumbnail-wrapper ${index === 0 ? 'active' : ''}`}
              data-index={index}
              data-src={photo.image.url}
              data-id={photo.id}
              data-category={photo.category?.data || ''}
            >
              <img src={`${photo.image.url}?w=300`} alt={`Thumbnail ${index + 1}`} />
            </div>
          ))}
        </div>
      </div>
    <picture class="thumbnail-frame">
      <source srcset={framePc.src} media="(min-width: 768px)"  />
      <img src={frameSp.src} alt="画像" />
    </picture>
    </div>


  <!-- Camera Stalker SVG -->
  <span class="camera-stalker">
    <img class="camera-stalker-giza" src={cameraGiza.src} alt="">
    <img class="camera-stalker-main" src={camera.src} alt="">
  </span>

  </main>

  <style is:global>
    .category{
      font-family: var(--ff-jp2);
      font-weight: 400;
      position: absolute;
      inset-inline: 0;
      margin-inline: auto;
      text-align: center;
      bottom: calc(100% + 24px);
    }

     @media (min-width:768px){
  .category{
    bottom: calc(100% + 40px);
  }
    }
    .thumbnail-frame{
      position: absolute;
      margin: auto;
      place-items: center;
      inset: 0;
      bottom: 10%;
      width: calc(360 / 375 * 100cqw);
      display: none;
    }
  @media (min-width:768px){
    .thumbnail-frame{
      display: grid;
      top: calc(-40 / 16 * 1rem);
      bottom:16%;
      --frame-size: min(900px, calc(900 / 1440 * 100cqw), calc(902 / 600 * 60dvh));
      width: var(--frame-size);
      min-width: 600px;
    }
  }
  .photo-gallery {
    position: relative;
    height: 100dvh;
    overflow: hidden;
    background: #f5f4f0;
  }

.photo-gallery .gallery {
    display: flex;
    flex-direction: column;
    height: 100dvh;
    justify-content: center;
    margin-top: calc(10 / 16 * 1rem);
    row-gap: calc(40 / 16 * 1rem);
  }
@media (min-width:768px){
  .photo-gallery .gallery {
    row-gap: min(calc(80 / 1440 * 100cqw),80px);
    margin-top: calc(60 / 16 * 1rem);
  }
}
  .photo-gallery .main-image-container {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 2;
    width: calc(320 / 375 * 100cqw);
    margin-inline: auto;
  }

  .photo-gallery .main-image {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
    border-radius: 4px;
    cursor: pointer;
  }
@media (min-width:768px){
  .photo-gallery .main-image {
    --size: min(440px, calc(440 / 1440 * 100cqw), 50dvh);
    width: var(--size);
    height: var(--size);
  }
}
  .photo-gallery .thumbnail-container {
    height: 60px;
    position: relative;
    overflow: hidden;
  }
@media (min-width:768px){
  .photo-gallery .thumbnail-container {
    height: min(calc(120 / 1440 * 100cqw),120px);

    position: relative;
    overflow: hidden;
  }
}
  .photo-gallery .thumbnail-track {
    display: flex;
    gap: 12px;
    padding: 10px calc(50vw - 40px);
    position: absolute;
    left: 0;
    will-change: transform;
    z-index: 2;
  }

  .photo-gallery .thumbnail-wrapper {
    flex-shrink: 0;
    cursor: pointer;
    position: relative;
    border-radius: 4px;
    overflow: hidden;
    transition: opacity 0.3s ease,transform 0.3s ease;
    opacity: .4;
  }

  .photo-gallery .thumbnail-wrapper:hover {
    opacity: 0.7;
  }

  .photo-gallery .thumbnail-wrapper.active {
    opacity: 1;
    transform: scale(1.2);
  }

  .photo-gallery .thumbnail-wrapper.active::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 4px;
    pointer-events: none;

  }

  .photo-gallery .thumbnail-wrapper img {
    display: block;
    height: 80px;
    width: auto;
    object-fit: cover;
  }


  .photo-gallery .scroll-hint {
    position: fixed;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 11px;
    color: #999;
    display: flex;
    align-items: center;
    gap: 8px;
  }




  /* ── Camera Stalker ── */
  .camera-stalker {
    position: fixed;
    top: 0;
    left: 0;
    width: 120px;
    height: 120px;
    pointer-events: none;
    z-index: 9999;
    will-change: transform;
    opacity: 0;
    padding: 1rem;
    background: radial-gradient(circle, rgba(131, 131, 131, 0.2) 0%, rgba(87, 87, 87, 0) 60%);
    transition: opacity 0.4s ease;
    border-radius: 50%;
  }

  .camera-stalker.is-visible {
    opacity: 1;
  }

  @keyframes iris {
    0%, 40%   { r: 54; }
    48%       { r: 0; }
    52%       { r: 0; }
    60%, 100% { r: 54; }
  }

  .iris-hole {
    animation: iris 1.6s cubic-bezier(0.7, 0, 0.3, 1) infinite;
  }

  @keyframes glass {
    0%, 40%   { opacity: 0.35; }
    48%       { opacity: 0; }
    52%       { opacity: 0; }
    60%, 100% { opacity: 0.35; }
  }

  .lens-glass {
    animation: glass 1.6s cubic-bezier(0.7, 0, 0.3, 1) infinite;
  }

  @media (max-width: 768px) {
    .photo-gallery .thumbnail-wrapper img {
      height: 60px;
    }
  }
  .camera-stalker-giza{
    animation: fade-infinite 1.2s infinite;
    position: absolute;
    right:20px;
    top:20px;
  }
.camera-stalker-main{
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 40%;
}
  @keyframes fade-infinite {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

</style>

<script>
  import { initMenuController } from '../../assets/js/libs/MenuController';
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => initMenuController());
  } else {
    initMenuController();
  }
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" is:inline></script>

<script is:inline>
  (function() {
    var isTouchDevice = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
    if (isTouchDevice) return;

    const stalker = document.querySelector('.camera-stalker');
    const target = document.querySelector('.main-image');
    if (!stalker || !target) return;

    document.addEventListener('mousemove', function(e) {
      stalker.style.transform = 'translate(' + (e.clientX - 40) + 'px, ' + (e.clientY - 40) + 'px)';
    });

    target.addEventListener('mouseenter', function() {
      stalker.classList.add('is-visible');
      target.style.cursor = 'none';
    });

    target.addEventListener('mouseleave', function() {
      stalker.classList.remove('is-visible');
      target.style.cursor = 'pointer';
    });
  })();
</script>

