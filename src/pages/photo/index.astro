  <style is:global>
    .category{
      font-family: var(--ff-jp2);
      font-weight: 400;
      position: absolute;
      inset-inline: 0;
      /* top: min(calc(80 / 1440 * 100cqw),80px); */
      top: calc(80 / 16 * 1rem);
      margin-inline: auto;
      text-align: center;
    }
    .thumbnail-frame{
      position: absolute;
      margin: auto;
      display: grid;
      place-items: center;
      inset: 0;
      bottom: 10%;
      width: calc(360 / 375 * 100cqw);
    }
  @media (min-width:768px){
    .thumbnail-frame{
      bottom: 20%;
      width: calc(900 / 1440 * 100cqw);
      min-width: 600px;
      max-width: 900px;
    }
  }
  .photo-gallery {
    position: relative;
    height: 100vh;
    overflow: hidden;
    background: #f5f4f0;
  }

  .photo-gallery .counter {
    position: fixed;
    right: 30px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 12px;
    color: #999;
    z-index: 100;
  }

  .photo-gallery .counter .current {
    color: #333;
    font-weight: 500;
  }

  .photo-gallery .gallery {
    display: flex;
    flex-direction: column;
    height: 100vh;
  }

  .photo-gallery .main-image-container {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px 100px;
    position: relative;
    overflow: hidden;
    z-index: 2;
  }

  .photo-gallery .main-image {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
    border-radius: 4px;
    cursor: pointer;
  }
@media (min-width:768px){
  .photo-gallery .main-image {
    max-width:440px ;
    width: calc(440 / 1440 * 100cqw);
  }
}
  .photo-gallery .thumbnail-container {
    height: 120px;
    position: relative;
    overflow: hidden;
  }

  .photo-gallery .thumbnail-track {
    display: flex;
    gap: 12px;
    padding: 10px calc(50vw - 40px);
    position: absolute;
    left: 0;
    will-change: transform;
    z-index: 2;
  }

  .photo-gallery .thumbnail-wrapper {
    flex-shrink: 0;
    cursor: pointer;
    position: relative;
    border-radius: 4px;
    overflow: hidden;
    transition: opacity 0.3s ease,transform 0.3s ease;
    opacity: .4;
  }

  .photo-gallery .thumbnail-wrapper:hover {
    opacity: 0.7;
  }

  .photo-gallery .thumbnail-wrapper.active {
    opacity: 1;
    transform: scale(1.2);
  }

  .photo-gallery .thumbnail-wrapper.active::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 4px;
    pointer-events: none;

  }

  .photo-gallery .thumbnail-wrapper img {
    display: block;
    height: 80px;
    width: auto;
    object-fit: cover;
  }


  .photo-gallery .scroll-hint {
    position: fixed;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 11px;
    color: #999;
    display: flex;
    align-items: center;
    gap: 8px;
  }




  /* ── Camera Stalker ── */
  .camera-stalker {
    position: fixed;
    top: 0;
    left: 0;
    width: 50px;
    height: 50px;
    pointer-events: none;
    z-index: 9999;
    will-change: transform;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .camera-stalker.is-visible {
    opacity: 1;
  }

  @keyframes iris {
    0%, 40%   { r: 54; }
    48%       { r: 0; }
    52%       { r: 0; }
    60%, 100% { r: 54; }
  }

  .iris-hole {
    animation: iris 1.6s cubic-bezier(0.7, 0, 0.3, 1) infinite;
  }

  @keyframes glass {
    0%, 40%   { opacity: 0.35; }
    48%       { opacity: 0; }
    52%       { opacity: 0; }
    60%, 100% { opacity: 0.35; }
  }

  .lens-glass {
    animation: glass 1.6s cubic-bezier(0.7, 0, 0.3, 1) infinite;
  }

  @media (max-width: 768px) {
    .photo-gallery .gallery {
      padding: 60px 15px 20px;
    }

    .photo-gallery .main-image-container {
      padding: 10px 20px;
    }

    .photo-gallery .counter {
      right: 15px;
    }

    .photo-gallery .thumbnail-wrapper img {
      height: 60px;
    }

    .photo-gallery .thumbnail-container {
      height: 90px;
    }
  }
